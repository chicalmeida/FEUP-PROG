#include <iostream>
#include <cmath>

using namespace std;

double round(double x, unsigned n){
    return floor(x*pow(10,n)+0.5)/pow(10,n);

}

int main() {
    double x;
    unsigned n;
    cout<<"Insert the number you want to round: "<<endl;
    cin>>x;
    cout<<"Enter the number of decimal places: "<<endl;
    cin>>n;
    cout<<round(x,n);

}